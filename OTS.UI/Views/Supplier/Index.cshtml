        </div>
        <div class="order-innerWrapper-main-footer">
            <p>@ViewBag.complete_order</p>
        </div>
    </a>


    <a href="../Supplier/UnproceedOrder" class="order-innerWrapper">
        <div class="order-innerWrapper-main">
            <i class="fa-solid fa-clock"></i>
