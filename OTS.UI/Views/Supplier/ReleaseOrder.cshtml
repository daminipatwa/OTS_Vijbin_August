
@{
    ViewData["Title"] = "ReleaseOrder";
    Layout = "~/Views/Shared/supplier_layout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">

    <div class="row">
        <!-- Form controls -->
        <div class="col-md-12">
            <div class="card mb-4">
                <h5 class="card-header">Release Orders</h5>
                <div class="card-body demo-vertical-spacing demo-only-element">
                    <div class="row mb-3">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>From Date</label>
                                <input type="date" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>To Date</label>
                                <input type="date" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-1">
                            <div class="form-group">
                                <label></label>
                                <button type="button" class="btn btn-warning btn-sm" style="margin-top: 39%;">Search</button>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label></label>

                                <button type="button" id="btnExportRelease" class="btn btn-success btn-sm" style="margin-top: 16%;">Export Excel</button>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card-datatable table-responsive pt-0">
                                <table class="datatables-basic table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Order Id</th>
                                            <th>Quantity</th>
                                            <th>Department</th>
                                            <th>Order Status</th>
                                            <th>Rate</th>
                                            <th>order Date</th>
                                            @* <th></th> *@
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td><a href="../Supplier/ViewOrder?id=@item.id">@item.orderid</a></td>
                                                    <td>@item.qty</td>
                                                    <td>@item.department</td>
                                                    <td>@item.status</td>
                                                    <td>@item.amount</td>
                                                    <td>@item.orderdate</td>
                                                   @* <td> <a href="../Supplier/vieworder?id=@item.id" class="btn btn-warning"><i class="fas fa-eye"></i></a></td>*@
                                                </tr>

                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>


    </div>

</div>
<script>
    document.getElementById("btnExportRelease").addEventListener("click", function () {
        fetch("../Supplier/ExportToExcel_ReleaseOrder")
            .then(response => {
                const contentType = response.headers.get("content-type") || "";

                // Check for server errors
                if (!response.ok) {
                    return response.text().then(text => { throw new Error(text); });
                }

                // If server returned HTML (like login page), throw error
                if (!contentType.includes("application/vnd.openxmlformats-officedocument.spreadsheetml.sheet")) {
                    return response.text().then(text => {
                        throw new Error("Unexpected response (HTML/Text received instead of Excel):\n" + text);
                    });
                }

                return response.blob();
            })
            .then(blob => {
                const url = window.URL.createObjectURL(blob);
                const a = document.createElement("a");
                a.href = url;
                a.download = "ReleaseOrder.xlsx";
                document.body.appendChild(a);
                a.click();
                document.body.removeChild(a);
                window.URL.revokeObjectURL(url);
            })
            .catch(error => {
                console.error("Export error:", error);
                alert("Export Failed: " + error.message);
            });
    });
</script>
