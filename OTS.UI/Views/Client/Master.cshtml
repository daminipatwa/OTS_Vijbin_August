@model OTS.Data.Models.combomodel
@{
    ViewData["Title"] = "Master";
    Layout = "~/Views/Shared/client_layout.cshtml";
}

  <div class="run-time-order">
                <h3 class="mb-3">Masters</h3>
                <div class="container mt-5">
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item col-md-4">
                            <a class="nav-link active" id="home" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Cost Center</a>
                        </li>
                        <li class="nav-item col-md-4">
                            <a class="nav-link" id="profile" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Department</a>
                        </li>
                        <li class="nav-item col-md-4">
                            <a class="nav-link" id="contact" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">Branch</a>
                        </li>
                    </ul>
                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                            <!-- <button class="btn btn-primary mt-3" id="loadHomeContent">Load Home Content1 </button> -->
                            <div id="homeContent" class="mt-3">
<!--------------------------------------- master Wrapper Start --------------------------------------->
                    <div class="masters-wrapper">
                        <form method="post" action="../Masters/CostCenter">
                            <input type="hidden" value="@Model.costCenterModel.Id" name="Id" />
                            <div class="mb-3">
                                <label for="exampleFormControlInput1" class="form-label"><i class="fa-solid fa-tags"></i> Cost Center Name</label>
                                <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Cost Center Name" name="Name" value="@Model.costCenterModel.Name">
                            </div>

                            <button type="submit" class="btn btn-primary">Submit</button>
                        </form>
                    </div>
                                  <div class="master-wrapper-second">
                                    <h3>All Cost Center List</h3>
                                    <table class="table">
                                        <thead>
                                          <tr>
                                            <th scope="col">Cost Center ID</th>
                                            <th scope="col">Cost Center Name</th>
                                            <th scope="col">Created Date</th>
                                            <th scope="col">Created User ID</th>
                                            <th scope="col">Actions</th>
                                          </tr>
                                        </thead>
                                        <tbody>
                                @foreach (var item in Model.costCenters)
                                {
                                    <tr>
                                        <th scope="row">@item.Id</th>
                                        <td>@item.Name</td>
                                        <td>@item.createdon</td>
                                        <td>@item.createdby</td>
                                        <td>
                                            <a class="btn btn-primary" href="../Supplier/Master?id=@item.Id&t=C"><i class="fa-solid fa-pen-to-square"></i></a> |
                                            <button class="btn btn-danger" onclick="delete_data(@item.Id)"><i class="fas fa-trash"></i></button>
                                        </td>

                                    </tr>
                                }
                                        </tbody>
                                      </table>
                                  </div>
<!--------------------------------------- master Wrapper Start --------------------------------------->

                            </div>

                        </div>
                        <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                            <!-- <button class="btn btn-primary mt-3" id="loadProfileContent">Load Profile Content2</button> -->
                            <div id="profileContent" class="mt-3">
                                <!-------------------------- master Wrapper Start --------------------------------------->
                    <div class="masters-wrapper">
                        <form method="post" action="../Masters/Department">
                            <input type="hidden" value="@Model.departmentModel.Id" name="Id" />
                            <div class="mb-3">
                                <label for="exampleFormControlInput1" class="form-label"><i class="fa-solid fa-building"></i> Add Department</label>
                                <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Add Department" name="Name" value="@Model.departmentModel.Name">
                            </div>

                            <button type="submit" class="btn btn-primary">Submit</button>
                        </form>
                    </div>

                                  <div class="master-wrapper-second">
                                    <h3>All Department List</h3>
                                    <table class="table">
                                        <thead>
                                          <tr>
                                            <th scope="col">Department ID</th>
                                            <th scope="col">Department Name</th>
                                            <th scope="col">Created Date</th>
                                            <th scope="col">Created User ID</th>
                                            <th scope="col">Actions</th>
                                          </tr>
                                        </thead>
                                        <tbody>
                                @{
                                    foreach (var item in Model.departmentModels)
                                    {
                                        <tr>
                                            <th scope="row">@item.Id</th>
                                            <td>@item.Name</td>
                                            <td>@item.createdon</td>
                                            <td>@item.createdby</td>
                                            <td>
                                                <a href="../Supplier/Master?id=@item.Id&t=D" class="btn btn-primary"><i class="fa-solid fa-pen-to-square"></i></a> |
                                                <button class="btn btn-danger" onclick="delete_depart(@item.Id)"><i class="fas fa-trash"></i></button>
                                            </td>

                                        </tr>
                                    }
                                }
                                        </tbody>
                                      </table>
                                  </div>
            <!--------------------------------------- master Wrapper Start --------------------------------------->
                            </div>
                        </div>
                        <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
                            <!-- <button class="btn btn-primary mt-3" id="loadContactContent">Load Contact Content3</button> -->
                            <div id="contactContent" class="mt-3">
                                <!--------------------------------------- master Wrapper Start --------------------------------------->
                    <div class="masters-wrapper">
                        <form method="post" action="../Masters/Branch">
                            <input type="hidden" value="@Model.branchModel.Id" name="Id" />
                            <div class="mb-3">
                                <label for="exampleFormControlInput1" class="form-label"><i class="fa-solid fa-city"></i> Add Branch</label>
                                <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Add Branch" name="Name" value="@Model.branchModel.Name">
                            </div>

                            <button class="btn btn-primary">Submit</button>
                        </form>
                    </div>

                                  <div class="master-wrapper-second">
                                    <h3>All Branch List</h3>
                                    <table class="table">
                                        <thead>
                                          <tr>
                                            <th scope="col">Branch ID</th>
                                            <th scope="col">Branch Name</th>
                                            <th scope="col">Created Date</th>
                                            <th scope="col">Created User ID</th>
                                            <th scope="col">Actions</th>
                                          </tr>
                                        </thead>
                                        <tbody>
                                           @foreach (var item in Model.branchModels)
                                           {
                                             <tr>
                                               <th scope="row">@item.Id</th>
                                               <td>@item.Name</td>
                                               <td>@item.createdon</td>
                                               <td>@item.createdby</td>
                                               <td>
                                               <a class="btn btn-primary" href="../Supplier/Master?id=@item.Id&t=B"><i class="fa-solid fa-pen-to-square"></i></a> |
                                               <button class="btn btn-danger" onclick="delete_branch(@item.Id)"><i class="fas fa-trash"></i></button>
                                           </td>

                                          </tr>
                                          }
                                        </tbody>
                                      </table>
                                  </div>
<!--------------------------------------- master Wrapper Start --------------------------------------->
                            </div>
                        </div>
                    </div>
                </div>

    @section scripts1 {
        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
        <script>
            $(document).ready(function () {
                $('#loadHomeContent').click(function () {
                    $('#homeContent').html('<p>This is dynamically loaded content for the Home tab.</p>');
                });
                $('#loadProfileContent').click(function () {
                    $('#profileContent').html('<p>This is dynamically loaded content for the Profile tab.</p>');
                });
                $('#loadContactContent').click(function () {
                    $('#contactContent').html('<p>This is dynamically loaded content for the Contact tab.</p>');
                });

                if (getUrlVars()["t"] == "D") {
                    $("#home").removeClass("active");
                    $("#home").removeClass("show");
                    $("#home-tab").removeClass("active");
                    $("#contact").removeClass("active");
                    $("#contact").removeClass("show");
                    $("#contact-tab").removeClass("active");
                    $("#profile").addClass("active");
                    $("#profile").addClass("show");
                    $("#profile-tab").addClass("active");
                }
                if (getUrlVars()["t"] == "B") {
                    $("#home").removeClass("active");
                    $("#home").removeClass("show");
                    $("#home-tab").removeClass("active");
                    $("#contact").addClass("active");
                    $("#contact").addClass("show");
                    $("#contact-tab").addClass("active");
                    $("#profile").removeClass("active");
                    $("#profile").removeClass("show");
                    $("#profile-tab").removeClass("active");
                }
                if (getUrlVars()["t"] == "C") {
                    $("#home").addClass("active");
                    $("#home").addClass("show");
                    $("#home-tab").addClass("active");
                    $("#contact").removeClass("active");
                    $("#contact").removeClass("show");
                    $("#contact-tab").removeClass("active");
                    $("#profile").removeClass("active");
                    $("#profile").removeClass("show");
                    $("#profile-tab").removeClass("active");
                }
            });

            function getUrlVars() {
                var vars = [], hash;
                var hashes = window.location.href.slice(window.location.href.indexOf('?') + 1).split('&');
                for (var i = 0; i < hashes.length; i++) {
                    hash = hashes[i].split('=');
                    vars.push(hash[0]);
                    vars[hash[0]] = hash[1];
                }
                return vars;
            }

            function delete_data(id) {
                $.get('../Masters/Delete_costcenter?id=' + id + '', function (html) {

                    if (html == "Record Deleted Successfully") {
                        //success_opup("Success", html)
                        location.reload();
                    }
                    else {
                        //error_opup("Error", html)
                    }


                })
            }
            function delete_depart(id) {
                $.get('../Masters/Delete_department?id=' + id + '', function (html) {

                    if (html == "Record Deleted Successfully") {
                        //success_opup("Success", html)
                        location.reload();
                    }
                    else {
                        //error_opup("Error", html)
                    }


                })
            }
            function delete_branch(id) {
                $.get('../Masters/Delete_branch?id=' + id + '', function (html) {

                    if (html == "Record Deleted Successfully") {
                        //success_opup("Success", html)
                        location.reload();
                    }
                    else {
                        //error_opup("Error", html)
                    }


                })
            }
        </script>
    }


