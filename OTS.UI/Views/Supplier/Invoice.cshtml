
@{
    ViewData["Title"] = "Invoice";
    Layout = "~/Views/Shared/supplier_layout.cshtml";
}

<div class="recent-orders-wrapper">
    <h3>Make Invoice</h3>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>App.Level 1</th>
                @* <th>App.Level 2</th>
                <th>App.Level 3</th> *@
                <th>Payment</th>
                <th>Rate</th>
                <th>Quantity</th>
                <th>Order Placed Time</th>
                <th>Action</th>
                <!-- <th>Level 2</th>
                <th>Dispatch</th>    -->
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.orderid</td>
                        <td>@item.approvstatus</td>

                        <td></td>
                        <td>@item.amount</td>
                        <td>@item.qty</td>
                        <td>@item.orderdate</td>
                        <td>
                            <a href="../Supplier/CreateInvoice?id=@item.id" class="btn btn-warning"><i class="fas fa-eye"></i></a>
                        </td>
                    </tr>

                }
            }

        </tbody>
    </table>

</div>
<hr>

