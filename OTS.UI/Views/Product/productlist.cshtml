                    <div class="row">
                        <div class="col-md-12">
                            <div class="card-datatable table-responsive pt-0">
                                <table class="datatables-basic table table-bordered" id="tbldata">
                                    <thead>
                                        <tr>
                                            <th>Product Id</th>
                                            <th>Description</th>
                                            <th>Category</th>
                                            <th>Make</th>
                                            <th>MRP</th>
                                            <th>Unit</th>
                                            <th>Stock</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>@item.id</td>
                                                    <td>@item.Description</td>
                                                    <td>@item.Category</td>
                                                    <td>@item.Make</td>
                                                    <td>@item.Rate</td>
                                                    <td>@item.Unit</td>
                                                    <td>@item.stock</td>
                                                    <td></td>
                                                </tr>

                                            }
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>


    </div>

</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#tbldata").DataTable();
        });
    
    </script>
}