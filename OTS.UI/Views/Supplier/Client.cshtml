
@{
    ViewData["Title"] = "Client";
    Layout = "~/Views/Shared/supplier_layout.cshtml";
}

  <div class="add-vendor-wrapper">
                <h3>Add Client</h3>
                <form method="post" id="add-vendorform">

                    <div class="form-group mb-3 col-md-6">
            <input class="form-control" type="text" id="inputdefault" placeholder="Name" name="name" required>
                    </div>

                    <div class="form-group mb-3 col-md-6">
                        <input class="form-control" type="email" id="inputdefault" placeholder="Email ID" name="emailid" required>
                    </div>

                    <div class="form-group mb-3 col-md-6">
            <input class="form-control" type="number" id="inputdefault" placeholder="Phone" name="mobileno" required>
                    </div>


                    <div class="form-group mb-3 col-md-6">
            <input class="form-control" type="text" id="inputdefault" placeholder="State" name="state" required>
                    </div>

                    <div class="form-group mb-3 col-md-6">
            <input class="form-control" id="inputdefault" placeholder="GST" name="gst" required>
                    </div>

                    <div class="form-group mb-3 col-md-6">
            <input class="form-control" id="inputdefault" placeholder="Location" name="location" required>
        </div>

                    <!-- <div class="form-floating mb-3 col-md-12">
                        <input type="text" class="form-control" id="floatingPassword" placeholder="Location">
                        <label for="floatingLocation">Location</label>
                      </div> -->

                    <!-- <div class="form-floating mb-3 col-md-6">
                        <select class="form-select" aria-label="Default select example">
                            <option value="1">Stationary</option>
                            <option value="2">Visiting</option>
                            <option value="3">Printing</option>
                            <option value="3">Hardware / Supply</option>
                            <option value="3">Book List</option>
                          </select>
                      </div> -->
        <select class="form-group mb-3 col-md-6 form-select-sm" aria-label="Small select example" name="category">
                        <option selected value="1">Stationary</option>
                        <option value="2">Visiting</option>
                        <option value="3">Printing</option>
                        <option value="4">Hardware / Supply</option>
                        <option value="5">Book List</option>
                    </select>

                    <div class="form-group mb-3 col-md-6">
            <input class="form-control" id="inputdefault" placeholder="Region" name="region" required>
                    </div>

                    <button type="submit" class="col-md-6" id="vendor-submit-btn">Submit</button>
                    <button class="col-md-6" id="vendor-reset-btn">Reset</button>
            </form>
            </div>
           

            <hr>

            <!-- ----------------------Add Vendor Form End------------------------------>

            <!-- ----------------------Recent Orders Start------------------------------>

            <div class="recent-orders-wrapper">
                <h3>Client List</h3>


                <div class="row mb-2">
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Client Name">
                        </div>

                    </div>
                    <div class="col-md-6">
                        <select class="form-group mb-3 col-md-6 " aria-label="Small select example">
                            <option selected>Enable</option>
                            <option value="2">Disabled</option>
                            <!-- <option value="3">Printing</option>
                                    <option value="3">Hardware / Supply</option>
                                    <option value="3">Book List</option> -->

                        </select>
                        <button class="btn btn-outline-secondary btn-search-sm" type="button" id="button-addon2">
                            <i class="bi bi-search"></i> <!-- Bootstrap Icons search icon -->
                            Search
                        </button>
                    </div>


                </div>

                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>E-Mail ID</th>
                            <th>Phone No.</th>
                            <th>State</th>
                            <th>GST No.</th>
                            <th>Location</th>
                            <th>Service Category</th>
                            <th>Region</th>
                            <th>Action</th>
                            <!-- <th>Level 2</th>
                                <th>Dispatch</th>    -->
                        </tr>
                    </thead>
                    <tbody>
                     @foreach (var item in Model)
                     {
                        <tr>
                    <td>@item.Name</td>
                    <td>@item.emailid</td>
                    <td>@item.mobileno</td>
                    <td>@item.state</td>
                    <td>@item.gst</td>
                    <td>@item.location</td>
                    <td>@{
                            if (item.category == "1")
                            {
                                    <span>Stationary</span>
                            }
                            else if (item.category == "2")
                            {
                                     <span>Visiting</span>
                            }
                            else if (item.category == "3")
                            {
                                    <span>Printing</span>
                               
                            }
                            else if (item.category == "4")
                            {

                                
                                    <span>Hardware / Supply</span>
                            }
                            if (item.category == "5")
                            {
                                    <span>Book List</span>
                            }
                        }</td>
                    <td>@item.region</td>
                    <td><a href="../Supplier/Edit_Client?id=@item.Id" class="btn btn-primary"><i class="fa-solid fa-pen-to-square"></i></a> |
                        <button class="btn btn-danger" onclick="delete_client(@item.Id)"><i class="fas fa-trash"></i></button>
                    </td>
                    <!-- <td>Demo</td>
                    <td>Demo</td> -->
                </tr>
                    }
                </tbody>
                </table>
            </div>
            <hr>
            @section Scripts {
           
                function delete_client(id) {
                    let text;
                        if (confirm("Do You Want To delete Record!") == true) {
                        
                        $.ajax({
type: "GET",
url: "../supplier/Delete_client?id=" + id,
cache: false,
success: function(html){
alert(html);
 location.reload();
}
});
                        } 
                }
            
            }
