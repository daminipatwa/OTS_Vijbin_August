<!-- ----------------------OrderWrapper END ------------------------------>
<!-- ----------------------Add Vendor Form Start------------------------------>
<div class="add-vendor-wrapper">
    <h3>Add Client</h3>
    <form method="post" id="add-vendorform" action="../Supplier/Client">

        <div class="form-group mb-3 col-md-6">
            <input class="form-control" id="inputdefault" placeholder="Name" name="name">
        </div>

        <div class="form-group mb-3 col-md-6">
            <input class="form-control" id="inputdefault" placeholder="Email ID" name="emailid">
        </div>

        <div class="form-group mb-3 col-md-6">
            <input class="form-control" id="inputdefault" placeholder="Phone" name="mobileno">
        </div>


        <div class="form-group mb-3 col-md-6">
            <input class="form-control" id="inputdefault" placeholder="State" name="state">
        </div>

        <div class="form-group mb-3 col-md-6">
            <input class="form-control" id="inputdefault" placeholder="GST" name="gst">
        </div>

        <div class="form-group mb-3 col-md-6">
            <input class="form-control" id="inputdefault" placeholder="Location" name="location">
        </div>
        
        <select class="form-group mb-3 col-md-6 form-select-sm" aria-label="Small select example" name="category">
            <option selected value="1">Stationary</option>
            <option value="2">Visiting</option>
            <option value="3">Printing</option>
            <option value="4">Hardware / Supply</option>
            <option value="5">Book List</option>
        </select>

        <div class="form-group mb-3 col-md-6">
            <input class="form-control" id="inputdefault" placeholder="Region" name="region">
        </div>

        <button type="submit" class="col-md-6" id="vendor-submit-btn">Submit</button>
        <button class="col-md-6" id="vendor-reset-btn">Reset</button>
    </form>
</div>


<hr>

<!-- ----------------------Add Vendor Form End------------------------------>
<!-- ----------------------Recent Orders Start------------------------------>

<div class="recent-orders-wrapper">
    <h3>Recent Orders</h3>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Order Id</th>
                <th>Quantity</th>
                <th>Department</th>
                <th>Category</th>
                <th>MRP</th>
                <th>Ordered Date</th>
                <th>Shipping Address</th>
                <th>Billing Address</th>
                <th>Optional Shipping Address</th>
                <th>Remark</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var item in Model.order_list_model)
                {
                    <tr>
                        <td><a href="../Supplier/vieworder?id=@item.id"></a>@item.orderid</td>
                        <td>@item.qty</td>
                        <td>@item.department</td>
                        <td>@item.category</td>
                        <td>@item.amount</td>
                        <td>@item.orderdate</td>   
                        <td>@item.shipping_address</td>
                        <td>@item.billing_address</td>
                        <td>@item.shippingaddress2</td>
                        <td>@item.remark</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
<hr>

<!-- ----------------------Recent Orders End------------------------------>
